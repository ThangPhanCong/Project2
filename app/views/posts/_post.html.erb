<div class="row feed-post" id="<%= post.id %>">
  <div class="col-6 offset-sm-3">
    <div class="card card-block post-ok">

      <% if current_user?(post.user) %>
        <div class="dropdown show">
          <a class=" dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <a href="#" class="dropdown-item"><div data-toggle="modal", data-target='#modaledit-<%= post.id %>'>Edit</div></a>
              <%= link_to t(".delete"), post, method: :delete,data: { confirm: t(".yousure") }, class: "dele-post dropdown-item" %>
          </div>
        </div>
      <% end %>
        <span><%= post.user.avatar %></span>
        <a href=<%= user_path(post.user) %> class="post_user">
          <span class="name"><%= post.user.name %></span>
        </a>
        <span class="timestamp">
        <%= time_ago_in_words(post.created_at) %> <%= t ".ago" %>
      </span>
      <h4 class="card-title post-title"><%= post.title %></h4>
      <div class="post-content"><%= raw post.content %></div>

      <p class="card-text">

      <ol id="comments">
        <small class="tet">
          <%= render partial: "comments/comment", collection: post.comments, as: "comment" %>
        </small>
      </ol>
      <% if logged_in?  %>
        <% if current_user.following?(post.user) or current_user?(post.user) %>
          <%= form_for [post,current_user.comments.build], id: "new_comment" do |f| %>
            <%= f.text_field :content, class: "comment-field form-control", placeholder: t(".add_comment") %>
            <%= f.hidden_field :post_id, value: post.id %>
          <% end %>
        <% end  %>
      <% end %>
    </div>
  </div>
  <div  class="modal fade"  id="modaledit-<%= post.id %>" role="dialog" aria-hidden="true" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
          <h4 class="modal-title">Edit Post</h4>
        </div>
        <div class="modal-body">
          <%= form_for post do |f| %>
            <div class="form-group">
              <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
            </div>

            <div class="form-group">
              <%= f.cktext_area :content, class: "content-field form-control" %>
            </div>

            <div class="offset-sm-2">
              <%= f.submit "Edit", class: "btn btn-outline-secondary ", id: "btn-update" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div id="myModal" class="modal image">
    <span class="close" >&times;</span>
    <img class="modal-content image" id="img01">
    <div id="caption"></div>
  </div>

</div>
<script>
  jQuery(document).ready(function($) {
    $.each($('.post-content p img'), function( index, value ) {
      value.style = '';
    });
  });
</script>
