<div class="row feed-post" id="<%= post.id %>">
  <div class="col-6 offset-sm-3">
    <div class="card card-block post-ok">
      <a href=<%= user_path(post.user) %> class="post_user">
        <span class="name"><%= post.user.name %></span>
      </a>
      <h4 class="card-title post-title"><%= post.title %></h4>
      <div class="post-content"><%= raw post.content %></div>

      <p class="card-text">
      <span class="timestamp">
        <%= t ".posted" %> <%= time_ago_in_words(post.created_at) %> <%= t ".ago" %>
        <% if current_user?(post.user) %>
        <a href="#"><div data-toggle="modal", data-target='#modaledit-<%= post.id %>'>Edit</div></a>
          <%= link_to t(".delete"), post, method: :delete,
            data: { confirm: t(".yousure") }, class: "dele-post" %>
        <% end %>
      </span>
    </div>
  </div>
  <div  class="modal fade"  id="modaledit-<%= post.id %>" role="dialog" aria-hidden="true" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
          <h4 class="modal-title">Edit Post</h4>
        </div>
        <div class="modal-body">
          <%= form_for post do |f| %>
            <div class="form-group">
              <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
            </div>

            <div class="form-group">
              <%= f.cktext_area :content, class: "content-field form-control" %>
            </div>

            <div class="offset-sm-2">
              <%= f.submit "Edit", class: "btn btn-outline-secondary ", id: "btn-update" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
