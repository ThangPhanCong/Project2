<div class="each-comment">
  <%= link_to comment.user.name, comment.user, class: "comment-user" %>
  <span class="comment-content"><%= comment.content %></span> <br />
  <%= content_tag :span, time_ago_in_words(comment.created_at), class: "comment-time" %>
  <% if current_user?(comment.user) %>
      <div class="comment-actions">
        <%= link_to t(".edit-comment"), edit_post_comment_path(comment.post, comment), class: "edit-comments" %>
          <%= link_to t(".delete-comment"), [comment.post, comment],
            method: :delete, data: { confirm: t(".yousure") }, class: "deletes_comment" %>
      </div>
      <div class="form-edit">
        <%= form_for [comment.post, comment] do |f| %>
          <%= f.text_field :content, class: "form-control update-comment" %>
        <% end %>
      </div>
    <% elsif current_user?(comment.post.user) %>
      <%= link_to t(".delete-comment"), [comment.post, comment],
            method: :delete, data: { confirm: t(".yousure") }, class: "deletes_comment" %>
  <% end %>

</div>

