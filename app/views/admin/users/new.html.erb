<div class="new-user-admin-ajax">
  <div class="">
    <%= image_tag current_user.avatar.thumb.url if current_user.avatar? %>
              <%= link_to current_user.name, current_user %>
    <%= form_for ([:admin, @user]), html: {class: "admin-new-user"} do |f|%>
      <div class="form-group has-success" >
        <%= f.label :name, class: "admin-set" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, class: "admin-set" %>
        <%= f.text_field :email,class: "form-control sgemai" %>
      </div>

      <div class="form-group has-success">
        <%= f.label :password, class: "admin-set" %>
        <%= f.password_field :password,class: "form-control" %>
      </div>

      <div class="form-group has-success">
        <%= f.label :password_confirmation, class: "admin-set" %>
        <%= f.password_field :password_confirmation,class: "form-control" %>
      </div>

      <%= f.submit t(".signup"),class: "btn btn-outline-primary"  %>
    <% end %>
  </div>
</div>
