<%= form_for resource_post, html: {class: "new_form_ajax"} do |f| %>
  <div class="form-group">
    <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
  </div>
  <div class="form-group">
     <%= f.text_field :all_tags, placeholder: "Tags:", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.cktext_area :content, class: "content-field form-control" %>
  </div>

  <div style="text-align: center">
    <%= f.submit t(".create"), class: "btn btn-outline-primary ", id: "btn-create-ajax" %>
  </div>
<% end %>
