<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: "content-field form-control" %>
  </div>

  <div class="offset-sm-2">
    <%= f.submit t(".create"), class: "btn btn-outline-secondary ", id: "btn-create" %>
  </div>
<% end %>
