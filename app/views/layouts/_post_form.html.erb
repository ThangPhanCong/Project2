<script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>

<%= form_for resource_post do |f| %>
  <div class="form-group">
    <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
  </div>

  <div class="form-group">
    <%= f.cktext_area :content, class: "content-field form-control" %>
  </div>

  <div class="offset-sm-2">
    <%= f.submit t(".create"), class: "btn btn-outline-secondary ", id: "btn-create" %>
  </div>
<% end %>
