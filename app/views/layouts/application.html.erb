<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formsignin" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </div>

          <div class="modal-body">
            <h1 class="text-center"><%= t ".login" %></h1>
            <div class="row">
              <div class="col-md-10 col-md-offset-3 form-size">
                <%= render "layouts/form_login" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formsignup" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </div>

          <div class="modal-body">
            <h1 class="text-center"><%= t ".signup" %></h1>
            <div class="row">
              <div class="col-md-10 col-md-offset-3 form-size">
                <%= render "layouts/form_signup" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

     <div class="modal fade" id="search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </div>

          <div class="modal-body">
            <%= link_to (image_tag "logo_white.png"), root_path %>
            <h2 class="text-center">Kết quả tìm kiếm:</h2>
            <div class="row">
              <div class="col-md-10 col-md-offset-3 form-size">
                <table>
                  <tbody class="user-table">
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="modal fade" id="newpost" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formnewpost" %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </div>

            <div class="modal-body">
              <h1 class="text-center"><%= t ".new-post" %></h1>
              <div class="row">
                <div class="col-md-12 col-md-offset-3 form-size">
                  <%= render "layouts/post_form" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="edituser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formnedituser" %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </div>

            <div class="modal-body">
              <h1 class="text-center"><%= t ".edit-user" %></h1>
              <div class="row">
                <div class="col-md-12 col-md-offset-3 form-size">
                  <%= render "layouts/form_user_edit" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "layouts/header" %>

    <%= yield %>
  </body>
</html>
