<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formsignin" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </div>

          <div class="modal-body">
            <h1 class="text-center"><%= t ".login" %></h1>
            <div class="row">
              <div class="col-md-10 col-md-offset-3 form-size">
                <%= render "layouts/form_login" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= t ".formsignup" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </div>

          <div class="modal-body">
            <h1 class="text-center"><%= t ".signup" %></h1>
            <div class="row">
              <div class="col-md-10 col-md-offset-3 form-size">
                <%= render "layouts/form_signup" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render "layouts/header" %>
    <%= yield %>
  </body>
</html>
