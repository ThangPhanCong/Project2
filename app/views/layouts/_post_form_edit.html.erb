<%= form_for post, html: {class: "edit-ajax"} do |f| %>
<div class="form-group">
  <%= f.text_field :title,placeholder: "Title:", class: "title-field form-control" %>
</div>

<div class="form-group">
  <%= f.text_area :content, class: "content-field form-control" %>
</div>

<div class="offset-sm-5">
  <%= f.submit "Edit", class: "btn btn-outline-primary ", id: "btn-update"%>
</div>
<% end %>
